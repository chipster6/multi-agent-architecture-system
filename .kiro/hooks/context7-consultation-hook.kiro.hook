{
  "enabled": true,
  "name": "Context7 Consultation Hook",
  "description": "Automatically consults the context7 MCP server for the most up-to-date libraries and best practices before every task execution when the agent is running in autonomous mode",
  "version": "1",
  "when": {
    "type": "promptSubmit"
  },
  "then": {
    "type": "askAgent",
    "prompt": "Before executing any task, first consult the context7 MCP server to get the most up-to-date information about libraries, frameworks, and best practices relevant to this task. Use this information to inform your approach and ensure you're following current standards and recommendations."
  }
}