# Multi-Agent Architecture Design System Configuration

# Required: Anthropic API Key for Claude integration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Logging configuration
LOG_LEVEL=info
NODE_ENV=development

# Optional: MCP Server configuration
MCP_SERVER_PORT=3000

# Optional: Postgres configuration (coordinator memory + logs)
MCP_DB_HOST=localhost
MCP_DB_PORT=5432
MCP_DB_NAME=mcp
MCP_DB_USER=mcp
MCP_DB_PASSWORD=mcp
MCP_DB_ENABLED=true

# Optional: Embeddings (Gemini)
MCP_EMBEDDINGS_PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key_here
MCP_EMBEDDINGS_MODEL=gemini-embedding-001
MCP_EMBEDDINGS_DIMENSIONS=3072
MCP_EMBEDDINGS_ENABLED=true

# Optional: Agent configuration
DEFAULT_MODEL=claude-3-sonnet-20241022
COMPLEX_AGENT_MODEL=claude-3-opus-20240229
AGENT_TIMEOUT=30000
MAX_RETRIES=3

# Optional: Performance tuning
MAX_PARALLEL_AGENTS=5
CONTEXT_CACHE_SIZE=100
ARTIFACT_STORAGE_PATH=./artifacts
