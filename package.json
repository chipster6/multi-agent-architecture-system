{
  "name": "foundation-mcp-runtime",
  "version": "0.1.0",
  "description": "Foundational MCP server providing core infrastructure for hosting and orchestrating AI agents",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:perf": "vitest run tests/performance",
    "bench": "vitest bench tests/performance",
    "test:property": "vitest run tests/property",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "lint:check": "eslint . --max-warnings 0",
    "format": "prettier --write . --cache",
    "format:check": "prettier --check . --cache",
    "format:fix": "prettier --write . --cache",
    "code-quality": "npm run type-check && npm run lint:check && npm run format:check",
    "dev": "tsx watch src/index.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai-agents",
    "agent-coordination",
    "tool-registry",
    "structured-logging",
    "typescript"
  ],
  "author": "chipster6",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ajv": "^8.12.0",
    "json-schema": "^0.4.0",
    "pg": "^8.11.3",
    "tslog": "^4.10.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@fast-check/vitest": "^0.2.4",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^9.37.0",
    "fast-check": "^3.15.0",
    "globals": "^15.0.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
